{
  "name": "multiverse",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "turbo dev",

    "build": "turbo build",
    "build:tsdocs": "typedoc --options packages/config/typedoc.json",
    
    "deploy:dev": "sst deploy --stage=dev",
    "deploy:db": "turbo deploy:db",

    "start:docs": "cd apps/docs && pnpm start",
    
    "test": "turbo test",
    "test:watch": "vitest run --watch --exclude e2e,integration",
    "test:coverage": "vitest run --coverage",
    
    "lint": "turbo lint",

    "clear:node_modules": "rm -rf node_modules && find . -name node_modules -type d -prune -exec rm -rf {} \\;",
    "clear:turbo": "rm -rf .turbo && find . -name .turbo -type d -prune -exec rm -rf {} \\;",
    "clear:dist": "rm -rf dist && find . -name dist -type d -prune -exec rm -rf {} \\;",
    "clear:next": "rm -rf .next && find . -name .next -type d -prune -exec rm -rf {} \\;",
    "clear:open-next": "rm -rf .open-next && find . -name .open-next -type d -prune -exec rm -rf {} \\;",
    "clear": "pnpm run clear:node_modules && pnpm run clear:turbo && pnpm run clear:dist && pnpm run clear:next && pnpm run clear:open-next"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@vitest/coverage-v8": "^0.34.2",
    "aws-cdk-lib": "2.124.0",
    "constructs": "10.3.0",
    "eslint": "^8.41.0",
    "eslint-config-custom": "workspace:*",
    "jsdoc": "^4.0.2",
    "sst": "2.40.3",
    "tsconfig": "workspace:*",
    "tsup": "^7.1.0",
    "tsx": "^3.12.7",
    "turbo": "^1.10.7",
    "typedoc": "^0.25.10",
    "typedoc-plugin-inline-sources": "^1.0.2",
    "typedoc-plugin-markdown": "4.0.0-next.53",
    "typescript": "^5.1.3",
    "vitest": "^1.5.0"
  },
  "workspaces": [
    "packages/**/*",
    "apps/*"
  ],
  "dependencies": {
  }
}