{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
      "declaration": true,
      "importHelpers": false,
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "target": "ES6",
      "lib": ["esnext"],
      "types": ["node", "vitest/globals", "jest"],
      "allowJs": true,
    },
    "include": [
      "src/**/*",
      "stack/**/*",
      "tests/**/*",
    ],
    "exclude": ["dist", "build", "node_modules"],
  }
