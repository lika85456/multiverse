{
  "name": "@multiverse/multiverse",
  "version": "0.0.0",
  "main": "src/index.ts",
  "scripts": {
    "test": "vitest run",
    "typecheck": "tsc -noEmit",

    "build:orchestrator": "tsup src/Orchestrator/index.ts --dts --format cjs --minify --clean --legacy-output --target es2020 --outDir src/Orchestrator/dist",
    "build:db": "tsup src/Compute/index.ts --dts --format cjs --minify --clean --sourcemap --target es2020 --outDir src/Compute/dist",
  
    "run:db": "DOCKER_BUILDKIT=1 docker build -t multiverse-compute -f Dockerfile.compute ../../ && docker run -p 9000:8080 multiverse-compute",

    "NEED_HELP_WITH_DEPLOYING": "https://stackoverflow.com/questions/76109195/how-to-fix-docker-login-error-error-saving-credentials",
    "deploy:db": "aws ecr get-login-password --region eu-central-1 | docker login --username AWS --password-stdin 529734186765.dkr.ecr.eu-central-1.amazonaws.com && DOCKER_BUILDKIT=1 docker build -t multiverse-compute -f Dockerfile.compute ../../ && docker tag multiverse-compute:latest 529734186765.dkr.ecr.eu-central-1.amazonaws.com/multiverse-compute:latest && docker push 529734186765.dkr.ecr.eu-central-1.amazonaws.com/multiverse-compute:latest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "tsconfig": "workspace:*",
    "@multiverse/vitest-config": "workspace:*",
    "tsup": "^7.1.0"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.363.0",
    "@aws-sdk/client-dynamodb": "^3.379.1",
    "@aws-sdk/client-ecr": "^3.413.0",
    "@aws-sdk/client-iam": "^3.410.0",
    "@aws-sdk/client-lambda": "^3.363.0",
    "@aws-sdk/client-s3": "^3.362.0",
    "@aws-sdk/client-sqs": "^3.552.0",
    "@aws-sdk/lib-dynamodb": "^3.388.0",
    "@aws-sdk/lib-storage": "^3.370.0",
    "@aws-sdk/s3-request-presigner": "^3.370.0",
    "@isaacs/ttlcache": "^1.4.1",
    "@multiverse/env": "workspace:*",
    "@multiverse/log": "workspace:*",
    "@trpc/client": "^10.37.1",
    "@trpc/server": "^10.37.1",
    "@types/adm-zip": "^0.5.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/node-os-utils": "^1.3.1",
    "adm-zip": "^0.5.10",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.3.1",
    "electrodb": "^2.9.3",
    "node-os-utils": "^1.3.7",
    "sqs-consumer": "^9.1.0",
    "sst": "2.40.3",
    "zod": "^3.21.4",
    "hnswlib-node": "^3.0.0"
  }
}